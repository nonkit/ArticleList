While Not[eob]
  TextWindow.WriteLine(site)
  buf = Network.GetWebPageContents(site)
  pNotFound = Text.GetLength(buf) + 1
  p = 1
  eod = "False"
  While Not[eod]
    param = "tag=time;class=published;"
    FindTag()
    pTime = pNotFound
    If tag <> "" Then
      pTime = p
      GetAttrAndText()
      date = txt
      If date <> dateLast Then
